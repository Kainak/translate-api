{
  "openapi": "3.0.0",
  "info": {
    "title": "Translation API",
    "description": "API for translating text.",
    "version": "1.0.0"
  },
  "servers": [
    {
      "url": "http://127.0.0.1:4040",
      "description": "Development server"
    }
  ],
  "paths": {
    "/": {
      "get": {
        "description": "",
        "responses": {
          "200": {
            "description": "OK"
          }
        }
      }
    },
    "/translations/": {
      "post": {
        "description": "",
        "responses": {
          "default": {
            "description": ""
          }
        },
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "text": {
                    "example": "any"
                  },
                  "to": {
                    "example": "any"
                  }
                }
              }
            }
          }
        }
      }
    },
    "/translations/{requestId}": {
      "get": {
        "description": "",
        "parameters": [
          {
            "name": "requestId",
            "in": "path",
            "required": true,
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "default": {
            "description": ""
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "CreateTranslationRequest": {
        "type": "object",
        "properties": {
          "text": {
            "type": "string",
            "example": "Hello, world!"
          },
          "targetLanguage": {
            "type": "string",
            "example": "pt"
          }
        },
        "required": [
          "text",
          "to"
        ]
      },
      "CreateTranslationResponse": {
        "type": "object",
        "properties": {
          "message": {
            "type": "string",
            "example": "Request received and is being processed."
          },
          "requestId": {
            "type": "string",
            "example": "a1b2c3d4-e5f6-7890-1234-567890abcdef"
          }
        }
      },
      "GetTranslationStatusResponse": {
        "type": "object",
        "properties": {
          "status": {
            "type": "string",
            "example": "completed"
          },
          "originalText": {
            "type": "string",
            "example": "Hello, world!"
          },
          "translatedText": {
            "type": "string",
            "example": "Ol√°, Mundo!"
          }
        }
      },
      "ErrorResponse": {
        "type": "object",
        "properties": {
          "message": {
            "type": "string",
            "example": "An error occurred."
          }
        }
      }
    }
  }
}