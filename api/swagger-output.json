{
  "swagger": "2.0",
  "info": {
    "title": "Translation API",
    "description": "API for translating text.",
    "version": "1.0.0"
  },
  "host": "localhost:4040",
  "basePath": "/translations",
  "schemes": [
    "http"
  ],
  "paths": {
    "/": {
      "post": {
        "description": "Create a new translation request",
        "parameters": [
          {
            "name": "body",
            "in": "body",
            "schema": {
              "type": "object",
              "properties": {
                "text": {
                  "example": "any"
                },
                "to": {
                  "example": "any"
                }
              }
            }
          }
        ],
        "responses": {
          "default": {
            "description": ""
          }
        }
      }
    },
    "/translations/{requestId}": {
      "get": {
        "description": "Get the status of a translation request by requestId (UUID)",
        "parameters": [
          {
            "name": "requestId",
            "in": "path",
            "required": true,
            "type": "string"
          }
        ],
        "responses": {
          "default": {
            "description": ""
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "CreateTranslationRequest": {
        "type": "object",
        "properties": {
          "text": {
            "type": "string",
            "example": "Hello, world!"
          },
          "targetLanguage": {
            "type": "string",
            "example": "pt"
          }
        },
        "required": [
          "text",
          "targetLanguage"
        ]
      },
      "CreateTranslationResponse": {
        "type": "object",
        "properties": {
          "message": {
            "type": "string",
            "example": "Request received and is being processed."
          },
          "requestId": {
            "type": "string",
            "example": "a1b2c3d4-e5f6-7890-1234-567890abcdef"
          }
        }
      },
      "GetTranslationStatusResponse": {
        "type": "object",
        "properties": {
          "status": {
            "type": "string",
            "example": "completed"
          },
          "originalText": {
            "type": "string",
            "example": "Hello, world!"
          },
          "translatedText": {
            "type": "string",
            "example": "Ol√°, Mundo!"
          }
        }
      },
      "ErrorResponse": {
        "type": "object",
        "properties": {
          "message": {
            "type": "string",
            "example": "An error occurred."
          }
        }
      }
    }
  }
}